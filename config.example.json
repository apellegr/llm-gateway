        "speed": "fast"
      },
      "anthropic": {
        "name": "Claude (Anthropic)",
        "specialties": ["complex", "nuanced", "expert", "analysis", "long-context"],
        "contextWindow": 200000,
        "speed": "medium",
        "cost": "paid"
